<form class="info-form" action="/restaurants" method="POST">
    <div class="container">
        <div class="mt-5 row">
            <div class="col-12 col-md-10 mx-auto">

                <div class="col-md-12">
                    <label for="name" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fa-solid fa-signature"></i>
                            名字：
                        </span>
                    </label>
                    <input type="text" id="name" class="form-control " placeholder="name" name="name" required>
                    <div class="invalid-feedback">請輸入店名</div>
                </div>

                <div class="col-md-12">
                    <label for="name_en" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fa-solid fa-signature"></i>
                            名字(en)：
                        </span>
                    </label>
                    <input type="text" id="name_en" class="form-control" placeholder="name_en" name="name_en">
                </div>

                <div class="col-md-12">
                    <label for="category" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-utensils pr-2"></i>
                            類別：
                        </span>
                    </label>
                    <input type="text" id="category" class="form-control" placeholder="category" name="category"
                        required>
                    <div class="invalid-feedback">請輸入類別</div>
                </div>

                <div class="col-md-12">
                    <label for="image" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-image pr-2"></i>
                            Image Url：
                        </span>
                    </label>
                    <input type="text" id="image" class="form-control"
                        placeholder="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5635/01.jpg"
                        name="image" required>
                    <div class="invalid-feedback">請輸入照片網址</div>
                </div>

                <div class="col-md-12">
                    <label for="location" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-map-marker-alt pr-2"></i>
                            地址：
                        </span>
                    </label>
                    <input type="text" id="location" class="form-control" placeholder="台北市羅斯福路三段 283 巷 17 號"
                        name="location" required>
                    <div class="invalid-feedback">請輸入地址</div>
                </div>

                <div class="col-md-12">
                    <label for="phone" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-mobile-alt pr-2"></i>
                            電話：
                        </span>
                    </label>
                    <input type="text" id="phone" class="form-control" placeholder="02 2363 8009" name="phone" required>
                    <div class="invalid-feedback">請輸入電話</div>
                </div>

                <div class="col-md-12">
                    <label for="google_map" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-location-arrow pr-2"></i>
                            Google Map：
                        </span>
                    </label>
                    <input type="text" id="google_map" class="form-control"
                        placeholder="https://goo.gl/maps/BJdmLuVdDbw" name="google_map" required>
                    <div class="invalid-feedback">請輸入 Google Map 網址</div>
                </div>

                <div class="col-md-12">
                    <label for="rating" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-star fa-xs"></i>
                            評分：
                        </span>
                    </label>
                    <input type="text" id="rating" class="form-control" placeholder="請輸入評分，數字介於 0~5" name="rating"
                        required>
                    <div class="invalid-feedback">請輸入評分，數字介於 0~5</div>
                </div>

                <div class="col-md-12">
                    <label for="description" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-pen pr-2"></i>
                            Description：
                        </span>
                    </label>
                    <textarea id="description" class="form-control" placeholder="選用最新鮮的頂級原料。" name="description"
                        rows="3" required></textarea>
                    <div class="invalid-feedback">請輸入介紹</div>
                </div>

                <div class="d-flex flex-row justify-content-center">
                    <a href="/" class="btn btn-secondary btn-back btn-sm text-white m-1">Back</a>
                    <button class="btn btn-success btn-save btn-sm text-white m-1" type="submit">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>