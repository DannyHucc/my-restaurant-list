<form action="/restaurants/{{restaurant._id}}/edit?_method=PUT" method="POST">
    <div class="container">
        <div class="mt-5 row">
            <div class="col-12 col-md-12 mx-auto">

                <div class="col-md-12">
                    <label for="name" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fa-solid fa-signature"></i>
                            名字：
                        </span>
                    </label>
                    <input type="text" id="name" class="form-control" placeholder="name" name="name"
                        value="{{ restaurant.name }}" required>
                </div>

                <div class="col-md-12">
                    <label for="name_en" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fa-solid fa-signature"></i>
                            名字(en)：
                        </span>
                    </label>
                    <input type="text" id="name_en" class="form-control" placeholder="name_en" name="name_en"
                        value="{{ restaurant.name_en }}" required>
                </div>

                <div class="col-md-12">
                    <label for="category" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-utensils pr-2"></i>
                            類別：
                        </span>
                    </label>
                    <input type="text" id="category" class="form-control" placeholder="category" name="category"
                        value="{{ restaurant.category }}" required>
                </div>

                <div class="col-md-12">
                    <label for="image" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-image pr-2"></i>
                            Image Url：
                        </span>
                    </label>
                    <input type="text" id="image" class="form-control" placeholder="image" name="image"
                        value="{{ restaurant.image }}" required>
                </div>

                <div class="col-md-12">
                    <label for="location" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-map-marker-alt pr-2"></i>
                            地址：
                        </span>
                    </label>
                    <input type="text" id="location" class="form-control" placeholder="location" name="location"
                        value="{{ restaurant.location }}" required>
                </div>

                <div class="col-md-12">
                    <label for="phone" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-mobile-alt pr-2"></i>
                            電話：
                        </span>
                    </label>
                    <input type="text" id="phone" class="form-control" placeholder="phone" name="phone"
                        value="{{ restaurant.phone }}" required>
                </div>

                <div class="col-md-12">
                    <label for="google_map" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-location-arrow pr-2"></i>
                            Google Map：
                        </span>
                    </label>
                    <input type="text" id="google_map" class="form-control" placeholder="google_map" name="google_map"
                        value="{{ restaurant.google_map }}" required>
                </div>

                <div class="col-md-12">
                    <label for="rating" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-star fa-xs"></i>
                            評分：
                        </span>
                    </label>
                    <input type="number" id="rating" class="form-control" placeholder="rating" name="rating" min="1" max="5"
                        value="{{ restaurant.rating }}" required>
                </div>

                <div class="col-md-12">
                    <label for="description" class="form-label">
                        <span class="text-secondary col-sm-2">
                            <i class="fas fa-pen pr-2"></i>
                            Description：
                        </span>
                    </label>
                    <textarea id="description" class="form-control" placeholder="description" name="description"
                        rows="3">{{ restaurant.description }}</textarea>
                </div>

                <div class="d-flex flex-row justify-content-center">
                    <button class="btn btn-success btn-sm text-white m-1" type="submit">Save</button>
                    <a href="/" class="btn btn-secondary btn-sm text-white m-1">Back</a>
                </div>

            </div>
        </div>
    </div>
</form>