<!-- ./views/index.handlebars -->
<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">尋找餐廳：</h4>

                <div class="row">

                    <div class="col-7 me-auto">
                        <div class="input-group">
                            <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳名稱、分類名稱"
                                aria-label="Restaurant Name" value="{{keywords}}" aria-describedby="search-button">
                            <div class="input-group-append">
                                <button class="btn btn-major" type="submit" id="search-button"><i
                                        class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>

                    <div class="col-5">
                        <div class="input-group">
                            <span class="span-sort input-group-text">排序</span>
                            <select class="form-select" id="{{sort}}" onchange="this.form.submit()" name="sort"
                                aria-label="Default select example">
                                <option value="_id">請選擇排序方式</option>
                                <option value="_id">最新</option>
                                <option value="-_id">最舊</option>
                                <option value="name_en">A to Z</option>
                                <option value="-name_en">Z to A</option>
                                <option value="-rating">最高評分</option>
                                <option value="rating">最低評分</option>
                                <option value="category">類別</option>
                                <option value="location">地區</option>
                        </div>
                        </select>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-11 mx-auto">
            <div class="row row-cols-sm-3 restaurant-cards">
                {{#each restaurants}}
                <div>
                    <a href="/restaurants/{{ this._id }}/detail" class="text-secondary">
                        <div class="card mb-3">
                            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">

                            <div class="card-body p-3">
                                <h6 class="card-title mb-1">{{this.name}}</h6>

                                <div class="restaurant-category mb-1">
                                    <i class="fas fa-utensils pr-2"></i> {{this.category}}
                                    <span class="badge rounded-pill bg-warning text-dark font-weight-normal ms-1">
                                        {{this.rating}}
                                        <i class="fas fa-star fa-xs"></i>
                                    </span>
                                </div>

                                <div class="d-flex justify-content-between mt-3">
                                    <form action="/restaurants/{{ this._id }}/detail" method="GET">
                                        <button type="submit" class="btn btn-info btn-details btn-sm text-white"><i
                                                class="fas fa-book-open"></i> Details</button>
                                    </form>

                                    <form action="/restaurants/{{ this._id }}/edit" method="GET">
                                        <button type="submit" class="btn btn-primary btn-edit btn-sm text-white"><i
                                                class="fas fa-edit"></i>
                                            Edit</button>
                                    </form>

                                    <form class="form-delete form-{{ this._id }}"
                                        action="/restaurants/{{ this._id }}/delete?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger btn-delete btn-sm text-white"
                                            data-id="{{ this._id }}"><i class="fas fa-trash-alt"
                                                data-id="{{ this._id }}"></i>
                                            Delete</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>