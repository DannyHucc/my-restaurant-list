<!-- ./views/partials/card.hbs -->
<div>
    <a href="/restaurants/{{ this._id }}/detail" class="text-secondary">
        <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">

            <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{this.category}}
                    <span class="badge rounded-pill bg-warning text-dark font-weight-normal ms-1">
                        {{this.rating}}
                        <i class="fas fa-star fa-xs"></i>
                    </span>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <form action="/restaurants/{{ this._id }}/detail" method="GET">
                        <button type="submit" class="btn btn-info btn-details btn-sm text-white"><i
                                class="fas fa-book-open"></i> Details</button>
                    </form>

                    <form action="/restaurants/{{ this._id }}/edit" method="GET">
                        <button type="submit" class="btn btn-primary btn-edit btn-sm text-white"><i
                                class="fas fa-edit"></i>
                            Edit</button>
                    </form>

                    <form class="form-delete form-{{ this._id }}"
                        action="/restaurants/{{ this._id }}/delete?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger btn-delete btn-sm text-white"
                            data-id="{{ this._id }}"><i class="fas fa-trash-alt" data-id="{{ this._id }}"></i>
                            Delete</button>
                    </form>
                </div>

            </div>
        </div>
    </a>
</div>