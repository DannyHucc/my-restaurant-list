<!-- ./views/partials/searchNotFound.hbs -->
<form action="/search">
    <h5 class="mb-2">No matching restaurant found, please enter again.</h5>
    <div class="input-group">
        <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keywords}}" aria-describedby="search-button">
        <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
        </div>
    </div>
</form>
<div class="d-flex justify-content-center mt-3">
    <form action="/">
        <button type="submit" class="btn btn-primary">Home Page</button>
    </form>
</div>